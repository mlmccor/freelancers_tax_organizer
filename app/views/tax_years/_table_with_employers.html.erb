  <table>
    <thead>
      <th>Check Date</th><th>Name</th><th>Employer Name</th><th>Amount</th>
      <th>Mileage</th>
    </thead>
    <tbody>
      <% employer_collection.each do |employer| %>
        <% employer.checks.each do |check| %>
          <tr>
            <td><%= check.check_date.strftime("%m/%d/%Y") %> </td>
            <td><%= check.name %> </td>
            <td><%= link_to employer.name, employer_path(employer)%><%=" "%> </td>
            <td>$<%= check.amount %></td>
            <td><%= check.mileage %></td>
          </tr>
        <% end %>
      <% end %>
      <tr>
        <td></td>
        <td></td>
        <td>Total</td>
        <td>$<%= Check.other_total_amount(employer_collection) %></td>
        <td><%= Check.other_total_mileage(employer_collection) %></td>
      </tr>
    </tbody>
  </table>
