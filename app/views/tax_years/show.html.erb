<h1>Tax Year - <%=@tax_year.user.username %></h1>
<%= link_to "Create a check", new_tax_year_check_path(@tax_year) %>

<% @tax_year.employers.uniq.each do |employer| %>
  <h4><%= link_to employer.name, edit_tax_year_employer_path(@tax_year) %></h4>
  <table>
    <thead>
      <th>Date Deposited</th><th>Name</th><th>Amount</th>
      <th>Mileage</th>
    </thead>
    <tbody>
      <% employer.checks.each do |check| %>
      <tr>
        <td><%=check.created_at.strftime("%m/%d/%Y")%></td>
        <td><%=check.name%></td>
        <td>$<%=check.amount%></td>
        <td><%=check.mileage%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
